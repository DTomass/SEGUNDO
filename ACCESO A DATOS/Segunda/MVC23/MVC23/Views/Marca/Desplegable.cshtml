
@{
    ViewData["Title"] = "Desplegable";
}

<h1>Desplegable</h1>

@Html.DropDownList("LasMarcas", new List<SelectListItem>{
    new SelectListItem { Text = "Marca 1", Value = "1" , Selected=true},
    new SelectListItem { Text = "Marca 2", Value = "2" },
    new SelectListItem { Text = "Marca 3", Value = "3" },
}, "Selecciona una marca");

@Html.DropDownList("Marcas", "Selecciona una marca");

<select id="Marcs" name="Marcs">
    @foreach(var marca in ViewBag.Marcas2)
    {
        <option value="@marca.ID">@marca.Nom_Marca</option>
    }
</select>