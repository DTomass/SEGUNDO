@model IEnumerable<ExamenMVC.Models.ProveedoresModelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Proveedores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Proveedor")
            </th>
            <th>
                @Html.DisplayName("Pedidos")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProveedor)
            </td>
                @foreach(var pedido in item.Pedidos)
                {
                    <td>
                        <a asp-action="Listado" asp-controller="Pedidos" asp-route-id="@pedido.ID">@pedido.FechaPedido</a>
                        <br>
                    </td>
                }
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
