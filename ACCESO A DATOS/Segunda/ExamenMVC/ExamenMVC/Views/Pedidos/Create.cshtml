@model ExamenMVC.Models.PedidosModelo

@{
    ViewData["Title"] = "Create";
}
<script>

    function cargarProductos(proveedorId) {
        $.ajax({
            url: "/Pedidos/GetProductos",
            type: "GET",
            data: { proveedorID: proveedorId },
            success: function (data) {
                var productosSelect = $("select[name='ProductosSeleccionados']");
                productosSelect.empty();
                $.each(data, function (index, item) {
                    productosSelect.append($('<option>').text(item.text).attr('value', item.value));
                });
            }
        });
    }
</script>
<h1>Create</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaPedido" class="control-label"></label>
                <input asp-for="FechaPedido" class="form-control" />
                <span asp-validation-for="FechaPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProveedorID" class="control-label"></label>
                <select asp-for="ProveedorID" onchange="cargarProductos(this.value)" class="form-control" asp-items="ViewBag.ProveedorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductosSeleccionados" class="control-label"></label>
                <select asp-for="ProductosSeleccionados" class="form-control" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
