@page
@model RazorPages.Pages.Alumnos.EditModel
@{
	var photo = "~/images/" + (Model.alumno.Foto ?? "nodisponible.jpg");
	Model.alumno.Foto = (Model.alumno.Foto ?? "Nodisponible.jpg");
}
	<h1>Edicion datos alumno</h1>
	<div>
		<form method="post" class="mt-3" enctype="multipart/form-data">
			<input hidden asp-for="alumno.Id" />
			<input hidden asp-for="alumno.Foto" />
			<div class="form-ground row">
				<label asp-for="alumno.Nombre" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="alumno.Nombre" class="form-control" placeholder="Nombre" />
				</div>
			</div>
			<div class="form-ground row">
				<label asp-for="alumno.Email" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="alumno.Email" class="form-control" placeholder="Email" />
				</div>
			</div>
			<div class="form-ground row">
				<label asp-for="alumno.CursoID" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="alumno.CursoID" class="form-select" placeholder="Curso" asp-items="Html.GetEnumSelectList()"/>
				</div>
			</div>
			<div class="form-ground row">
				<label asp-for="Photo" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="Photo" class="custom-file-input form-select" placeholder="Foto" />
				</div>
			</div>
			<div class="form-ground row">
				<img class="imageThumbail" src="@photo" asp-append-version="true" />
			</div>
			<div class="form-ground row">
				<div class="col-sm-10">
					<button type="submit" class="btn btn-primary">Save</button>
					<a asp-page="Alumnos/Index" class="btn btn-primary">Cancel</a>
				</div>
			</div>
		</form>
		@section Scripts{
			<script>
				$(document).ready(function(){
					$('.custom-file-input').on("change", function(){
						var fileName = $(this).val().split("\\").pop();
						$(this).next('.custom-file-input').html(fileName);
					})
				})
			</script>
		}
	</div>

