@page
@model Tomás.Pages.Grupos.GruposModel
@{
}
<h1>@Model.Seleccion.Count() SELECCIONES</h1>
<div class="col-sm-8">
	@await Component.InvokeAsync("SeleccionesGrupo")
</div>
<div class="card-group">
	@foreach (var seleccion in Model.Seleccion)
	{
		<div class="card m-3" style="min-width : 18rem; max-width: 30.5%">
			<div class="card-header">
				<h3>@seleccion.Grupo</h3>
				<h3>@seleccion.NomPais</h3>
			</div>
		</div>

	}
</div>
